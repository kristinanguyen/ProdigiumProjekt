<!DOCTYPE html>
<html>
    <head>
      <meta charset="UTF-8">
      <title>Konto</title>
      <link href='konto.css' rel='stylesheet'>
      <div class="wrapper">
        <div class="logo">
          <a href="/home"><img src="log.png" alt="logo"></a>
        </div>
        <ul class="nav-area"> <!--Quelle(nav-bar):https://www.w3schools.com/howto/howto_js_topnav.asp-->
          <li><a href="/home">Startseite</a></li>
          <li class="dropdown"> <!--Quelle(Dropdown):https://www.w3schools.com/howto/howto_css_dropdown.asp-->
            <a href="/home#section1" class="dropbtn">Prodigium-Box</a> <!--Quelle(#section1): https://www.w3schools.com/howto/howto_css_smooth_scroll.asp-->
            <div class="dropdown-content">
              <a href="/daemonen">Dämonen</a>
              <a href="/natur">Naturgeister</a>
              <a href="/Wasserwesen">Wasserwesen</a>
              <a href="/Flugwesen">Flugwesen</a>
            </div>
          </li>
          <li class="dropdown">
            <a href="/konto" class="dropbtn">Mein Profil</a>
            <div class="dropdown-content">
              <a href="/konto">Konto</a>
            </div>
          </li>
          <li><a href="/home#credits">Credits</a></li> 
          <% if (isLoggedIn) { %> 
            <form action="/logout" method="POST">
              <button class ="buttonANAB" type="submit">Abmelden</button>
            </form>
            <% } else { %>  
              <form action="/login" method="POST">
                <button class ="buttonANAB" type="submit">Anmelden</button>
              </form>
              <% } %>
            </ul>
          </div>
          <div class="kontoLogo">
            <img src="kontoLogo.png"></div>
            <div class="h1"><h1>Mein Konto</h1></div>
          </head>
          <body>
            
            <div class="tab"><!--Quelle(tablinks):https://www.w3schools.com/howto/howto_js_tabs.asp-->
              <button class="tablinks" onclick="openCity(event, 'Daten')" id="defaultOpen"><h2>Daten</h2></button>
              <button class="tablinks" onclick="openCity(event, 'Profilbild')"><h2>Profilbild</h2></button>
              <button class="tablinks" onclick="openCity(event, 'Konto')"><h2>Konto</h2></button>
              <button class="tablinks" onclick="openCity(event, 'Favoriten')"><h2>Favoriten</h2></button>
            </div>
            
            <div id="Daten" class="tabcontent">
              <% for(var i = 0; i < player.length; i++) { %>           
                <h1>Willkommen: <%= player[i].name %> !</h1> <br>
                <p>Benutzername: <%= player[i].username %><br>
                  E-mail: <%= player[i].email %> </p>
                  <% } %>
                </div>
                <div id="Profilbild" class="tabcontent">
                  <h3>Profilbild:</h3>
                  <div id="wrapper"> <!--Quelle(Img-Upload):https://codepen.io/maxkostinevich/pen/EjOzQL-->
                    <input type="file" accept="image/*" onchange="preview_image(event)">
                    <img id="output_image"/>
                    </div> 
                    <script type='text/javascript'>
                    function preview_image(event) 
                    {
                      var reader = new FileReader();
                      reader.onload = function()
                      {
                        var output = document.getElementById('output_image');
                        output.src = reader.result;
                      }
                      reader.readAsDataURL(event.target.files[0]);
                    }
                    </script>
                    </div>
                        
                    <div id="Konto" class="tabcontent">

                    <h3>Einstellungen</h3><br>

                    <p>Passwort ändern</p>
                    <p>Email-Adresse ändern</p>
                    <p>Konto löschen</p>
                  </div>

                    <div id="Favoriten" class="tabcontent">
                      <div class="fav">
                        <h3>Favoriten</h3>
                        <a href="/daemonen#Abbadon"><p>Abbadon</p></a>
                        <a href="/daemonen#Asmadäus"><p>Asmadäus</p></a>
                        <a href="/daemonen#Baal"><p>Baal</p></a>
                        <a href="/natur#Troll"><p>Troll</p></a>
                        <a href="/natur#Fee"><p>Fee</p></a>
                        <a href="/natur#Gnom"><p>Gnom</p></a>
                      </div> 
                        <div class="fav2">
                        <a href="/Flugwesen#Amphisbaena"><p>Amphisbaena</p></a>
                        <a href="/Flugwesen#Cito"><p>Cito</p></a>
                        <a href="/Flugwesen#Griffon"><p>Griffon</p></a>
                        <a href="/Wasserwesen#Aspidochelone"><p>Aspidochelone</p></a>
                        <a href="/Wasserwesen#Camena"><p>Camena</p></a>
                        <a href="/Wasserwesen#Charybdis"><p>Charybdis</p></a>
                      </div>
                    </div>
    


<script> //Quelle:https://www.w3schools.com/howto/howto_js_tabs.asp
function openCity(evt, cityName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}


document.getElementById("defaultOpen").click();
</script>

</body>
</html> 